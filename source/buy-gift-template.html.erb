<%= partial 'common/inner-header' %>

<section class="container">
  <form action="<%= site_url %>/charge" method="POST" class="form gift-form js-gift-form u-spb">

    <a href="#" class="gift-form__close"></a>

    <header class="gift-form__header">
      <h2><%= title %></h2>
      <p><%= description %></p>
    </header>

    <div class="field-group field-group--half-width">
      <label>From</label>
      <input type="text" name="from">
    </div>

    <div class="field-group field-group--half-width field-group--last-half">
      <label>Email</label>
      <input type="email" name="email" class="gift-form__email">
    </div>

    <div class="field-group">
      <label>Message</label>
      <textarea name="message"></textarea>
    </div>

    <div class="payment-errors"></div>

    <div class="field-group">
      <label>Cardholder name</label>
      <input type="text" name="name" class="stripe-name">
    </div>

    <div class="field-group">
      <label>Card number</label>
      <input type="text" name="number" class="stripe-number" placeholder="•••• •••• •••• ••••">
    </div>

    <div class="field-group field-group--half-width gift-form__exp-date">
      <label>Expiry date</label>
      <input type="text" name="expiry_date" class="stripe-exp-date" placeholder="•• / ••">
    </div>

    <div class="field-group field-group--half-width gift-form__cvc field-group--last-half">
      <label>CVC</label>
      <input type="text" name="cvc" class="stripe-cvc" placeholder="•••">
    </div>

    <input type="hidden" name="price" value="<%= to_pennies(price) %>" class="gift-form__price">
    <input type="hidden" name="item" value="<%= title %>" class="gift-form__item">

    <button type="submit" class="gift-form__button btn--full-width">
      <span class="button-text">Pay £<%= price %></span>
      <span class="loading"></span>
    </button>

    <a target="_blank" href="http://stripe.com" class="powered-by-stripe">
      <img src="/images/stripe.png" alt="Powered by Stripe">
    </a>
  </form>

  <div class="success-payment js-success-payment">
    <div class="thankyou js-thankyou">
      <img src="/images/us.png" alt="Thanks">
      <h3>Thank you so much, we can't wait to share our pics with you!</h3>
      <p class="small-print">You will receive a receipt to your email address shortly.</p>
      <%= link_to 'Go Home', '/', class: 'btn' %>
    </div>
  </div>

</section>