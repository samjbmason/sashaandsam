<!doctype html>
<html>
  <head lang="en">
    <meta charset="utf-8">

    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Sasha &amp; Sam" %></title>

    <%= stylesheet_link_tag "all" %>

  </head>

  <body>

    <canvas class="confetti"></canvas>

    <article>
      <%= yield %>
    </article>

    <footer class="u-spt u-spb">
      <%= image_tag 'flowers.png', width: 232 %>
    </footer>

    <script src="https://js.stripe.com/v2/"></script>
    <script>Stripe.setPublishableKey("<%= stripe_publishable_key %>")</script>
    <%= javascript_include_tag 'all', async: true %>
  </body>
</html>
